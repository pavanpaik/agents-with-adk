# Google Cloud Configuration
# Required: Set your Google Cloud project and location
GOOGLE_CLOUD_PROJECT="your-project-id"
GOOGLE_CLOUD_LOCATION="us-central1"

# Authentication Method 1: API Key (for Google AI Studio)
GOOGLE_API_KEY="your-api-key-here"

# Authentication Method 2: Vertex AI (comment out API key if using this)
# GOOGLE_GENAI_USE_VERTEXAI="True"

# Model Configuration (Optional - defaults are production-ready)
# Use more powerful models for better results
ORCHESTRATOR_MODEL="gemini-2.0-pro-exp"          # Main coordinator
REVIEWER_MODEL="gemini-2.0-flash-thinking-exp"   # Security, Architecture, Python Expert
ANALYZER_MODEL="gemini-2.0-flash-exp"            # Code Quality, Performance
PYTHON_EXPERT_MODEL="gemini-2.0-flash-thinking-exp"

# Review Configuration (Optional)
# Control the scope and depth of reviews
SEVERITY_THRESHOLD="LOW"              # CRITICAL, HIGH, MEDIUM, LOW
MAX_FILES_PER_REVIEW="50"             # Maximum files to review at once
MIN_PYTHON_VERSION="3.8"              # Minimum Python version to assume
MAX_COMPLEXITY="10"                   # McCabe complexity threshold
MAX_LINE_LENGTH="88"                  # Line length (88 for Black, 79 for PEP 8)

# Feature Flags (Optional)
# Enable or disable specific review aspects
REQUIRE_TYPE_HINTS="True"             # Flag missing type hints
REQUIRE_DOCSTRINGS="True"             # Flag missing docstrings
ENABLE_AUTO_FIX="False"               # Generate automatic fixes (future feature)
ENABLE_SECURITY_SCANNER="True"        # Enable security scanning tools
ENABLE_PERFORMANCE_PROFILING="True"   # Enable performance profiling
ENABLE_TYPE_CHECKING="True"           # Enable mypy-style type checking

# Framework Support (Optional)
# Automatically detected but can be specified
SUPPORTED_FRAMEWORKS="django,flask,fastapi,pytest,numpy,pandas"

# Logging Configuration (Optional)
LOG_LEVEL="INFO"                      # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT="json"                     # json, text

# Advanced Configuration (Optional)
PARALLEL_REVIEW="True"                # Review files in parallel
CACHE_RESULTS="True"                  # Cache review results
CACHE_TTL="3600"                      # Cache time-to-live in seconds
